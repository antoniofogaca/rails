<div class="container-fluid">
    <p id="notice"><%= notice %></p>

    <%= render 'shared/menu' %>
    

    <div class="wrapper">

    <h1>Funcionarios</h1>
    <form>
    <input name="filtro_descricao" type="text">
    <button class="btn btn-info">Pesquisa</button>
    </form>
    <p>
    <table id="example" class="table table-striped table-bordered " style="width:100%">
      <thead class: "thead-light">
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Cpf</th> 
          <th scope="col">Endereço</th>
          <th scope="col">Bairro</th>
          <th scope="col">Município</th>
          <th scope="col">Uf</th>      
          <th scope="col">Cep</th>
          <th scope="col">Celular</th>
          <th width="250px"></th> 
        </tr>
      </thead>

      <tbody>
        <% @funcionarios.each do |funcionario| %>
          
          <% puts '------'
          puts funcionario.inspect %>

          <tr>
            <td><%= funcionario.nome %></td>
            <td><%= funcionario.cpf %></td>
            <td><%= funcionario.endereco %></td>
            <td><%= funcionario.bairro %></td>
            <td><%= funcionario.municipio %></td>
            <td><%= funcionario.uf %></td>                
            <td><%= funcionario.cep %></td>
            <td><%= funcionario.celular %></td>
            <td>
              <%= link_to 'Mostrar', funcionario ,  class: "btn btn-light" %>
              <%= link_to 'Editar', edit_funcionario_path(funcionario) , class: "btn btn-primary" %>
              <%= link_to 'Deletar', funcionario, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Cadastrar Funcionario', new_funcionario_path , class: "btn btn-primary" %>

